<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:Right_Click_Commands.ViewModels"
        xmlns:Models="clr-namespace:Right_Click_Commands.Models"
        xmlns:local="clr-namespace:Right_Click_Commands.Views"
        x:Class="Right_Click_Commands.Views.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:MainWindowViewModel />
    </Window.DataContext>
    <Grid x:Name="GrdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <ListBox Grid.Column="0" Margin="0" ItemsSource="{Binding CommandConfigs}">
        </ListBox>

        <!-- Center Column -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" MouseDoubleClick="GridSplitter_MouseDoubleClick" />

        <!-- Right Column -->
        <Grid Margin="141,78,213,170" Grid.Column="2" >
            <Button Content="Button" Command="{Binding SimpleCommand}" />
        </Grid>

    </Grid>
</Window>
